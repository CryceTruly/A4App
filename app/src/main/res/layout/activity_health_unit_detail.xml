<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:id="@+id/healthunitphoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:transitionName="cpic" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/healthunitphoto"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:maxLines="3"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:transitionName="cname" />

        <TextView
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_centerHorizontal="true"
            android:text="District"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:transitionName="cdistrict" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/district"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="3"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:transitionName="cprofile" />

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:padding="5dp"
            android:minWidth="100dp"
            android:background="@drawable/blue_shade_shape"
            android:textColor="@color/white"
            android:textSize="15sp"
          android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:transitionName="copen" />

    </RelativeLayout>

    <TextView
        android:id="@+id/map"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/grey_border"
        android:padding="5dp"
        android:text="Map"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp" />

</RelativeLayout>

